<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:textSize="48dp"
        android:gravity="center"
        android:text="Settings"
        tools:ignore="HardcodedText,PxUsage,SpUsage" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="156dp"
        android:layout_height="100px"
        android:layout_x="1dp"
        android:layout_y="123dp"
        android:gravity="center"
        android:text="Ukrainian"
        android:textSize="30dp"
        tools:ignore="HardcodedText,PxUsage,SpUsage" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="156dp"
        android:layout_height="51dp"
        android:layout_x="228dp"
        android:layout_y="116dp"
        android:gravity="center"
        android:text="English"
        android:textSize="30dp"
        tools:ignore="HardcodedText,SpUsage" />

    <Switch
        android:id="@+id/language"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_x="162dp"
        android:layout_y="113dp"
        android:scaleX="2"
        android:scaleY="2"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/sound"
        android:layout_width="181dp"
        android:layout_height="60dp"
        android:layout_x="111dp"
        android:checked="true"
        android:layout_y="191dp"
        android:scaleX="2"
        android:scaleY="2"
        android:text="Sound"
        tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_x="-1dp"
        android:layout_y="259dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/theaters"
            android:layout_width="match_parent"
            android:checked="true"
            android:layout_height="wrap_content"
            android:text="Theaters"
            tools:ignore="HardcodedText" />

        <CheckBox
            android:id="@+id/restaurants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Recommended restaurants"
            tools:ignore="HardcodedText" />

        <CheckBox
            android:id="@+id/museums"
            android:layout_width="match_parent"
            android:checked="true"
            android:layout_height="wrap_content"
            android:text="Museums"
            tools:ignore="HardcodedText" />

        <CheckBox
            android:id="@+id/historicalPlaces"
            android:layout_width="match_parent"
            android:checked="true"
            android:layout_height="wrap_content"
            android:text="Historical places"
            tools:ignore="HardcodedText" />

        <CheckBox
            android:id="@+id/monuments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Monuments"
            tools:ignore="HardcodedText" />
    </LinearLayout>


</AbsoluteLayout>